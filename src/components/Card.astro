---
interface Card {
  paragraph: string;
}
const { paragraph } = Astro.props;
---

<div class="flex flex-col gap-4 p-4 shadow-2xl mt-10 rounded sm:w-3/12">
  <div class="quote">
    <img src="icon-quotes.svg" alt="quote" class="w-4" />
  </div>
  <p class="font-medium text-sm">{paragraph}</p>
  <div class="flex gap-3">
    <div class="user-icon">
      <img
        src="avatar-testimonial.jpg"
        alt="avatar"
        class="rounded-full w-10"
      />
    </div>
    <div>
      <p class="font-black text-sm">Kyle Burton</p>
      <span class="text-xs">Founder & CEO, Huddle</span>
    </div>
  </div>
</div>
